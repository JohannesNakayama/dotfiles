; inspired in part by https://github.com/notusknot/dotfiles

[colors]
black = #000
white = #fff
grey = #aaa
darkgrey = #555

background = #DD2E3440
foreground = #DD3B4252
focused-background = #E5E9F0
unfocused-background = #3B4252

standard = #D8DEE9
accent-yellow = #EBCB8B
accent-orange = #D08770
accent-red = #BF616A

[bar/mybar]
modules-right = date
modules-left = bspwm
font-0 = Noto Sans Mono:style=Regular
background = ${colors.background}

[module/date]
type = internal/date
interval = 1
date = %d-%h-%y %H:%M:%S

[module/bspwm]
type = internal/bspwm

pin-workspaces = true
enable-click = true
enable-scroll = true

format = <label-state>

format-background = ${colors.background}
format-foreground = ${colors.foreground}

label-monitor = %name%

label-focused = %name%
label-focused-padding = 2
label-focused-foreground = ${colors.accent-red}
label-focused-background = ${colors.focused-background}

label-occupied = %name%
label-occupied-padding = 2
label-occupied-foreground = ${colors.darkgrey}
label-occupied-background = ${colors.foreground}

label-urgent = %name%
label-urgent-padding = 2
label-urgent-foreground = ${colors.red}

label-empty = %name%
label-empty-padding = 2
label-empty-foreground = ${colors.grey}
label-empty-background = ${colors.unfocused-background}
