# git alias for dotfile manegement
alias config='/usr/bin/git --git-dir=/home/johannes/.cfg/ --work-tree=/home/johannes'

# use nvim by default
alias vim=nvim

# vim aliases for frequently modified files
alias vz='nvim ~/.zshrc'
alias vv='nvim ~/.config/nvim/init.vim'
alias vw='nvim ~/vimwiki/index.wiki'

# short cut to projects
alias p='cd ~/Projects && l'

# ls aliases
alias l='ls -lha'
alias ll='ls -alF'
alias la='ls -A'

# freqently used commands with long names
alias rss='snownews'
alias todo='task list'
alias rst='rstudio'
alias tclip='tmate display -p "#{tmate_ssh}" | xclip -selection clipboard'  # tmate session token to clipboard

# fuzzy search file opening
v() { $EDITOR $(rg --files | fzf) }

blog() { mv $1 $HOME/Projects/blog/blog/_drafts }
