# git alias for dotfile manegement
alias config='/usr/bin/git --git-dir=/home/johannes/.cfg/ --work-tree=/home/johannes'


# use nvim by default
alias vim=nvim

# TODO: setup neovide properly
# alias vim=neovide


# vim aliases for frequently modified files
alias vz='nvim ~/.zshrc'
alias vv='nvim ~/.config/nvim/init.lua'
alias vw='nvim ~/vimwiki/index.wiki'
alias va='nvim ~/.sh_aliases'
alias vala='nvim ~/.config/alacritty/alacritty.yml'
alias vg='nvim ~/.gitconfig'
alias vs='nvim ~/.config/sxhkd/sxhkdrc'
alias vb='nvim ~/.config/bspwm/bspwmrc'


# ls aliases
alias ls='ls --group-directories-first --color=auto'
alias l='ls -lh'
alias ll='ls -alhF'
alias la='ls -A'
alias lt='tree -L 2'
alias lt3='tree -L 3'
alias cll='clear && ll'


# even shorter git aliases
alias g='git'
alias gst='git status'
alias ga='git add'
alias gy='git commit'
alias gn='git reset'
alias gcl='git clone'
alias gco='git checkout'
alias gb='git branch'
alias gri='git rebase -i HEAD~10'


# config aliases
alias cst='config status'
alias ca='config add'
alias cy='config commit'
alias cn='config reset'


# short cuts to frequently used directories
alias blog='cd ~/Projects/.blog && ll'
alias learn='cd ~/Projects/.learning && ll'
alias write='cd ~/Projects/.writing && ll'


# freqently used commands with long names
alias rss='snownews'
alias todo='task list'
alias rst='rstudio'
alias tclip='tmate display -p "#{tmate_ssh}" | xclip -selection clipboard'  # tmate session token to clipboard
alias wiki='npx http-server ~/vimwiki_html -p 9009'
alias pipsh='pipenv shell'
alias idea='intellij-idea-community'
alias dc='docker-compose'
alias dcu='docker-compose up'
alias dcd='docker-compose down -v'


# python aliases
alias python='python3'
alias pip='pip3'


# android emulator
alias emu='~/Android/Sdk/emulator/emulator -avd Pixel_3a_API_30_1 -dns-server 127.0.0.1'


# fuzzy search scripts
v() { $EDITOR $(fzf) }          # open file in nvim
p() { cd ~/Projects && cd $(ls -a | fzf) }  # open private project folder
c() { cd $(ls -a | fzf) && ll }
