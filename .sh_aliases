# git alias for dotfile manegement
alias config='/usr/bin/git --git-dir=/home/johannes/.cfg/ --work-tree=/home/johannes'

# use nvim by default
alias vim=nvim

# vim aliases for frequently modified files
alias vz='nvim ~/.zshrc'
alias vv='nvim ~/.config/nvim/init.vim'
alias vw='nvim ~/vimwiki/index.wiki'
alias va='nvim ~/.sh_aliases'

# short cuts to frequently used directories
alias p='cd ~/Projects && l'
alias blog='cd ~/Projects/.blog && tree -L 2'
alias learn='cd ~/Projects/.learning && tree -L 2'
alias teach='cd ~/Projects/.teaching && tree -L 2'
alias write='cd ~/Projects/.writing && tree -L 2'
alias review='cd ~/Projects/.reviews && tree -L 2'

# ls aliases
alias l='ls -lh'
alias ll='ls -alhF'
alias la='ls -A'
alias lt='tree -L 2'

# even shorter git aliases
alias gst='git st'
alias gy='git commit'
alias gn='git reset'

# freqently used commands with long names
alias rss='snownews'
alias todo='task list'
alias rst='rstudio'
alias tclip='tmate display -p "#{tmate_ssh}" | xclip -selection clipboard'  # tmate session token to clipboard
alias cst='config status'
alias scalac3='scala3-compiler'
alias amm='amm --no-remote-logging'
alias wiki='http-server $HOME/vimwiki_html -o'

# python aliases
alias python='python3'
alias pip='pip3'

# fuzzy search file opening
v() { $EDITOR $(rg --files | fzf) }
