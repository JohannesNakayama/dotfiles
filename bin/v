#!/usr/bin/env bash
set -Eeuo pipefail # https://vaneyckt.io/posts/safer_bash_scripts_with_set_euxo_pipefail

# ------------------------------------------------------------------------------
# --- Open file with fuzzy finder ----------------------------------------------
# ------------------------------------------------------------------------------

# See: https://github.com/fdietze/dotfiles/blob/860eef3b499f736e54365991ad119f1a44d1e925/bin/v

find-git-root() (
  cd "$1"
  GITROOT=$(git rev-parse --show-toplevel 2> /dev/null)
  if [ $? == 0 ]; then
    echo "$GITROOT"
  else
    echo "$1"
  fi
)

(
  cd "$(find-git-root "$PWD")"
  file="$(fzf --preview 'bat --color=always {}' --preview-window '~3' --query="$(echo $@ | tr ' ' '\ ' )")"
  [ -n $file ] && $EDITOR "$file"
)
