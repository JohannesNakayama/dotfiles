#!/usr/bin/env bash

# ------------------------------------------------------------------------------
# --- Take a note --------------------------------------------------------------
# ------------------------------------------------------------------------------

syncdir=~/Sync/notes
filename=$syncdir/notes.md

if [[ ! -f "$filename" ]]; then
  currenttime=$(date '+%FT%T')
  touch "$filename"
  tmpl="---\ncreated: \"$currenttime\"\nmodified: \"$currenttime\"\ntitle: \"$title\"\ntags: \n  - \"note\"\n---\n"
  echo -en "$tmpl" > $filename
fi

currentdate=$(date '+%F (%T)')
echo -e "\n## $currentdate\n\n" >> $filename
$EDITOR +$ "$filename"
