#!/usr/bin/env bash

# ------------------------------------------------------------------------------
# --- Fast dotfile access ------------------------------------------------------
# ------------------------------------------------------------------------------

# See: https://github.com/fdietze/dotfiles/blob/860eef3b499f736e54365991ad119f1a44d1e925/bin/vd

cd $HOME
file="$(cfg ls-files | fzf)"
[[ -n $file ]] && $EDITOR +cd\ %:p:h "$HOME/$file"
