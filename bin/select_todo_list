#!/usr/bin/env bash
set -Eeuo pipefail # https://vaneyckt.io/posts/safer_bash_scripts_with_set_euxo_pipefail

# ------------------------------------------------------------------------------
# --- Rofi in todo list folder and output to stdout ----------------------------
# ------------------------------------------------------------------------------


tododir="$HOME/Sync/notes/todo"
ls "$tododir" |
  rofi -dmenu -i -p 'Select a file'

